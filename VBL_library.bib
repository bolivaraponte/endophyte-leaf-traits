@article{castro2018,
  title = {Mangrove Endophyte Promotes Reforestation Tree ({{Acacia}} Polyphylla) Growth},
  author = {Castro, Renata Assis and Dourado, Manuella Nobrega and family=Almeida, given=Jaqueline Raquel, prefix=de, useprefix=true and Lacava, Paulo Teixeira and Nave, Andre and family=Melo, given=Itamar Soares, prefix=de, useprefix=true and family=Azeuedo, given=Joao Lucio, prefix=de, useprefix=true and Quecine, Maria Carolina},
