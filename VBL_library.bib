@article{cazares2005,
  title = {Mycorrhiza-Plant Colonization Patterns on a Subalpine Glacier Forefront as a Model System of Primary Succession},
  author = {Cázares, Efrén and Trappe, James M. and Jumpponen, Ari},
  date = {2005-08},
  journaltitle = {Mycorrhiza},
