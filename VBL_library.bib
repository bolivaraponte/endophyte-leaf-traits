@article{ferris2014,
  title = {Speciation on a Local Geographic Scale: {{The}} Evolution of a Rare Rock Outcrop Specialist in {{Mimulus}}},
  author = {Ferris, Kathleen G. and Sexton, Jason P. and Willis, John H. and Ferris, Kathleen G.},
