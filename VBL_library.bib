  journaltitle = {Fungal Ecology},
  issn = {1754-5048},
  doi = {10.1016/j.funeco.2014.07.004},
  abstract = {Using field collected asexual Epichlo?? endophyte infected (E+) and endophyte free (E-) Hordeum brevisubulatum plants in a greenhouse experiment, we demonstrate that endophyte infection increases host plant resistance to waterlogging. All plants assigned to waterlogging treatment started to wither and lose their root vitality, and consequently lost considerable photosynthesizing and root tissues. However, E+ plants showed significantly less symptoms of damage, and they produced significantly greater content of chlorophyll, more tillers, higher shoots and higher under-ground biomass compared to E- plants. Waterlogging induced osmoprotective proline production particularly in E+ plants and had lower malondialdehyde content and electrolyte leakage, suggesting that endophyte infection positively affects osmotic potential and oxidative balance of the host plant. We propose that higher resistance of E+ plants of H. brevisubulatum to waterlogging should be acknowledged in breeding programmes and the scenarios of changes in grassland ecosystems as a result of climate change.},
  keywords = {An asexual Epichlo?? endophyte,Hordeum brevisubulatum,Performance,Physiology,Tolerance,Waterlogging}
}

