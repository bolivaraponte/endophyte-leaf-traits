@article{koop-jakobsen2017,
  title = {Survey of Sediment Oxygenation in Rhizospheres of the Saltmarsh Grass - {{Spartina}} Anglica},
  author = {Koop-Jakobsen, Ketil and Fischer, Jan and Wenzhöfer, Frank},
