  author = {Lutzoni, François and Nowak, Michael D. and Alfaro, Michael E. and Reeb, Valérie and Miadlikowska, Jolanta and Krug, Michael and Arnold, A. Elizabeth and Lewis, Louise A. and Swofford, David L. and Hibbett, David and Hilu, Khidir and James, Timothy Y. and Quandt, Dietmar and Magallón, Susana},
